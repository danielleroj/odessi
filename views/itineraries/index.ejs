<%- include('../partials/header') %>

<h2>It's Go Time</h2>
<div class="form-container">
  <% if (itineraries.length) { %> <% itineraries.forEach(i => { %>
  <table>
    <tr>
      <th>Title</th>
      <td><%= i.title %></td>
    </tr>
    <tr>
      <th>Start Date</th>
      <td><%= i.startDate.toLocaleDateString() %></td>
    </tr>
    <tr>
      <th>End Date</th>
      <td><%= i.endDate.toLocaleDateString() %></td>
    </tr>
    <tr>
      <th>Description</th>
      <td><%= i.description %></td>
    </tr>
    <tr>
      <td colspan="2" style="text-align: center">
        <a href="/itineraries/<%= i._id %>">Itinerary Details</a>
      </td>
    </tr>
    <% }) %>
  </table>

  <% } else { %>
  <table>
    <tr>
      <td id="itinerary-table-message">
        Well, well, well, look who's arrived without a single itinerary!<br />
        Time to shake a leg and start planning! We're not getting any younger,
        you know!
      </td>
    </tr>
    <% } %>
  </table>
</div>

<%- include('../partials/footer') %>
