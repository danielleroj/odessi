<%- include('../partials/header') %>

<h2>It's Go Time</h2>
<div class="form-container">
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
       <% itineraries.forEach(function(i) { %>
         <tr>
             <td><%= i.title %></td>
             <td><%= i.startDate.toLocaleDateString() %></td>
             <td><%= new Date(i.endDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></td>
             <td><%= i.description %></td>
             <td><a href="/itineraries/<%= i._id %>">Itinerary Details</a></td>
           </tr>
       <% }) %> 
    </tbody>
  </table>
</div>

<%- include('../partials/footer') %>
