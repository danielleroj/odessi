<%- include('../partials/header') %>

<h2>It's Go Time</h2>
<div class="form-container" id="itineraries-index">
  <% if (itineraries.length) { %> <% itineraries.forEach(i => { %>
  <table>
    <tr>
      <th colspan="2"><%= i.title %></th>
    </tr>
    <tr>
      <td colspan="2">
        <%= new Date(i.startDate).toISOString().split('T')[0] %> - <%= new
        Date(i.endDate).toISOString().split('T')[0] %>
      </td>
    </tr>
    <tr>
    <td>Description:<br> <%= i.description %></td></tr>
    <tr>
      <td colspan="2" style="text-align: center">
        <a href="/itineraries/<%= i._id %>">Itinerary Details</a>
      </td>
    </tr>
    <% }) %>
  </table>

  <% } else { %>
  <table>
    <tr>
      <td id="itinerary-table-message">
        Well, well, well, look who's arrived without a single itinerary!<br />
        Time to shake a leg and start planning! We're not getting any younger,
        you know!<br><br><a href="/itineraries/new">Start Planning</a><br><br>
        <img src="/images/IMG_5664.jpg" alt="cat">
      </td>
    </tr>
    <% } %>
  </table>
</div>

<%- include('../partials/footer') %>
