<%- include('../partials/header') %>

<div class="form-container">
     <form action="/itineraries/<%= itinerary.id %>?_method=PUT" id="edit-itinerary-form" method="POST" autocomplete="off">
        <label>Trip Title</label>
        <input type="text" name="title" value="<%= itinerary.title %>">
        <label>Start Date</label>
        <input type="date" name="startDate" value="<%= itinerary.startDate %>" required>
        <label>End Date</label>
        <input type="date" name="endDate" value="<%= itinerary.endDate %>" required>
        <label>Description</label>
        <textarea name="description" id="" cols="30" rows="3"><%= itinerary.description %></textarea>
        <label>Itinerary Item</label>
        <input type="text" placeholder="Enter location" name="items" value="<%= itinerary.items %>"><br><br>
        <button type="submit">Submit</button>
    </form>
</div>

<%- include('../partials/footer') %>
